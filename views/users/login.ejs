<% layout("/layouts/boilerplate") %>


    <div class="row mt-3">
        <h1 class="col-6 offset-3">Login on Wanderlust</h1>

        <div class="col-6 offset-2">
            <form action="/login" method="POST" class="needs-validation" novalidate>
                <div class="offset-3">
                    <label for="username" class="form-label">Username</label>
                    <input 
                    name="username"
                    class="form-control"
                    type="text"
                    id="username"
                    required>
                </div>
                <div class="offset-3">
                    <label for="password" class="form-label">Password</label>
                    <input 
                    name="password"
                    class="form-control"
                    type="password"
                    id="password"
                    required>
                </div>
                <button class="btn btn-success offset-3 mt-3">Login</button>
            </form>

        </div>
    </div>